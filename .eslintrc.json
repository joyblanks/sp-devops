{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-await-in-loop": 0,
        "no-restricted-syntax": 0,
        "no-plusplus": 0,
        "max-len": ["error", { "code": 130 }],
        "quotes": [
            "error",
            "single"
        ]
    }
}